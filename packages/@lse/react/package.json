{
  "name": "@lse/react",
  "description": "Light Source Engine React bindings.",
  "version": "1.0.0-private.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LightSourceEngine/LightSourceEngine.git"
  },
  "author": "Daniel Anderson <dan.anderson.oss@gmail.com>",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14"
  },
  "type": "module",
  "exports": {
    ".": "./dist/lse-react.mjs",
    "./jsx-runtime": "./dist/jsx-runtime.mjs",
    "./reconciler": "./dist/reconciler.mjs"
  },
  "module": "./dist/lse-react.mjs",
  "files": [
    "dist/lse-react.mjs",
    "dist/jsx-runtime.mjs",
    "dist/reconciler.mjs"
  ],
  "dependencies": {
    "@lse/core": "1.0.0-private.0"
  },
  "peerDependencies": {
    "react": "^17.0.1"
  },
  "scripts": {
    "bundle": "rimraf dist && rollup -c",
    "coverage": "nyc --reporter=text run-s testOnly",
    "jsdoc": "rimraf docs && jsdoc -c jsdoc.json",
    "lint": "standard",
    "prepublishOnly": "run-s bundle test",
    "test": "run-s lint testOnly",
    "testOnly": "node --loader @lse/loader/babel _mocha --reporter spec \"test/**/*.spec.js\""
  },
  "standard": {
    "ignore": [
      "build/",
      "dist/",
      "docs/",
      "node_modules/",
      "src/Scheduler.js"
    ],
    "parser": "@babel/eslint-parser",
    "env": {
      "mocha": true,
      "node": true
    }
  }
}
