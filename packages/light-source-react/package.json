{
  "name": "light-source-react",
  "description": "Light Source Engine",
  "version": "1.0.0-alpha.3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LightSourceEngine/LightSourceEngine.git"
  },
  "author": "Daniel Anderson <dan.anderson.oss@gmail.com>",
  "engines": {
    "node": ">=14"
  },
  "main": "dist/light-source-react.cjs",
  "exports": "./dist/light-source-react.mjs",
  "module": "./dist/light-source-react.mjs",
  "files": [
    "dist/"
  ],
  "dependencies": {
    "light-source": "1.0.0-alpha.3",
    "light-source-reconciler": "1.0.0-private.0"
  },
  "peerDependencies": {
    "react": "^16.13.1"
  },
  "scripts": {
    "bundle": "rimraf dist build/standalone && rollup -c",
    "coverage": "nyc --reporter=text run-s testOnly",
    "jsdoc": "rimraf docs && jsdoc -c jsdoc.json",
    "lint": "standard",
    "prepublishOnly": "run-s bundle test",
    "test": "run-s lint testOnly",
    "testOnly": "mocha --require @babel/register --reporter spec \"test/**/*.spec.js\""
  },
  "standard": {
    "ignore": [
      "build/",
      "dist/",
      "docs/",
      "node_modules/",
      "src/Scheduler.js"
    ],
    "parser": "@babel/eslint-parser",
    "env": {
      "mocha": true,
      "node": true
    }
  }
}
