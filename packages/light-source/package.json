{
  "name": "light-source",
  "description": "Light Source Engine",
  "version": "1.0.0-alpha.3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LightSourceEngine/LightSourceEngine.git"
  },
  "author": "Daniel Anderson <dan.anderson.oss@gmail.com>",
  "engines": {
    "node": ">=10"
  },
  "main": "dist/cjs/light-source.js",
  "module": "dist/esm/light-source.mjs",
  "files": [
    "dist/",
    "addon/",
    "binding.gyp"
  ],
  "dependencies": {
    "bindings": "^1.5.0"
  },
  "devDependencies": {
    "node-addon-api": "^2.0.0"
  },
  "scripts": {
    "install": "cross-env-shell node-gyp rebuild $LS_INSTALL_OPTS",
    "bundle": "rimraf dist build/standalone && rollup -c",
    "coverage": "nyc --reporter=text run-s testOnly",
    "cpplint": "tools/cpplint.py --recursive addon",
    "jsdoc": "rimraf docs && jsdoc -c jsdoc.json",
    "lint": "standard",
    "prepublishOnly": "run-s bundle test",
    "test": "run-s lint cpplint testOnly",
    "testOnly": "mocha --require @babel/register --reporter spec \"test/**/*.spec.js\""
  },
  "standard": {
    "ignore": [
      "dist/",
      "addon/",
      "node_modules/",
      "build/",
      "docs/",
      "tools/"
    ],
    "parser": "babel-eslint",
    "env": {
      "mocha": true,
      "node": true
    }
  }
}
