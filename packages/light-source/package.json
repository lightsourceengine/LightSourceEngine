{
  "name": "light-source",
  "description": "Light Source Engine",
  "version": "1.0.0-alpha.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LightSourceEngine/LightSourceEngine.git"
  },
  "author": "Daniel Anderson <dan.anderson.oss@gmail.com>",
  "engines": {
    "node": ">=10"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.mjs",
  "files": [
    "dist/",
    "addon/",
    "docs/",
    "binding.gyp"
  ],
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^1.6.3"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "babel-eslint": "^10.0.2",
    "chai": "^4.2.0",
    "del-cli": "^2.0.0",
    "docdash": "^1.1.1",
    "eslint": "^6.0.1",
    "jsdoc": "^3.6.3",
    "mocha": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "rollup": "^1.17.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.1",
    "segfault-handler": "^1.3.0",
    "sinon": "^7.3.2",
    "standard": "^13.0.2"
  },
  "scripts": {
    "bundle": "rollup -c",
    "coverage": "nyc --reporter=text mocha --require @babel/register --reporter spec \"test/**/*.spec.js\"",
    "lint": "standard",
    "cpplint": "tools/cpplint.py --recursive addon",
    "prepublishOnly": "run-s lint cpplint bundle test jsdoc",
    "test": "mocha --require @babel/register --reporter spec \"test/**/*.spec.js\"",
    "jsdoc": "del-cli docs && jsdoc -c jsdoc.json"
  },
  "standard": {
    "ignore": [
      "dist/",
      "addon/",
      "node_modules/",
      "build/",
      "docs/"
    ],
    "parser": "babel-eslint",
    "env": {
      "mocha": true,
      "node": true
    }
  }
}
